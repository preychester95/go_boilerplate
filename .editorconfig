root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[.envrc*]
indent_style = tab
indent_size = 4

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

[{debian/*preinst,debian/*preinst.in,debian/*postinst,debian/*postinst.in,debian/*prerm,debian/*prerm.in,debian/*postrm,debian/*postrm.in,debian/rules}]
indent_style = tab
indent_size = 4
